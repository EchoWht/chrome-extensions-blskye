{
	"manifest_version": 2,
	"name": "Blskye",
	"description": "Link Collection Tool",
	"version": "1.0.0",
	"options_page": "html/options.html",
	"permissions": [
		"contextMenus",
		"http://*/*",
		"https://*/*",
		"background",
		"bookmarks",
		"clipboardRead",
		"clipboardWrite",
		"contentSettings",
		"cookies",
		"*://*.google.com/",
		"debugger",
		"history",
		"idle",
		"management",
		"notifications",
		"pageCapture",
		"tabs",
		"topSites",
		"storage",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"

	],
	"browser_action": {
		"default_title": "保存到Blskye",
		"default_popup": "html/popup.html"
	},
	"background": {
		"scripts": [
			"assets/.js/background.js"
		]
	}
}
